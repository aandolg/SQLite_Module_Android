<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.good_work.sqlite_module.DetailsPersonActivity">

    <ScrollView
        android:id="@+id/sv_addperson_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_detailsperson_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"

                android:visibility="visible" />

            <EditText
                android:id="@+id/et_detailsperson_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surname" />

            <EditText
                android:id="@+id/et_detailsperson_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone" />

            <EditText
                android:id="@+id/et_detailsperson_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email" />

            <EditText
                android:id="@+id/et_detailsperson_skype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Skype" />

            <ToggleButton
                android:id="@+id/tbtn_detailsperson_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="ToggleButton"
                android:textOff="Edit"
                android:textOn="Save" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
